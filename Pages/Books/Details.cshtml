@page
@model Grigorovici_Tonia_Siemens_Internship.Pages.Books.DetailsModel

@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.AvailableQuantity)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Book.AvailableQuantity == 0)
            {
                <span class="text-danger">All books are currently borrowed.</span>
            }
            else
            {
                <span class="text-success">@Html.DisplayFor(model => model.Book.AvailableQuantity)</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
